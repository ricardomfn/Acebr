<%= render 'shared/navbar_general' %>

<h1>Leagues#index</h1>
<p>Find me in app/views/leagues/index.html.erb</p>

<div class="card-product">
    <% @leagues.each do |league| %>
      <%= link_to league_path(league) do %>
            <div class="card">
              <h2 class="card-title"><%= league.name %></h2>
              <div class="card-text">
                <p>created by :<%= league.user.first_name %></p>
              </div>
            </div>
        <% end %>
      <% end %>
</div>
