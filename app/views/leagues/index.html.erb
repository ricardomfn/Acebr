<%= render 'shared/navbar_general' %>

<h1>Ligues</h1>

<div class="card-product">
  <% @leagues.each do |league| %>
    <%= link_to league_path(league) do %>
      <div class="card mb-4" style="background-image: linear-gradient(rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.8)), url('<%= asset_path('ace-tennis-terre-battue.png') %>'); background-size: cover;height: 100px;">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div class="card-text">
          <h3 class="card-titre-gras"><%= league.name %></h3>
            <p>created by: <%= league.user.first_name %></p>
          </div>
          <div class="card-links" style="text-align: right;">
            <i class="fa-regular fa-square-plus" style="color: #050505;"></i>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
