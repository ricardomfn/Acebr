<%= simple_form_for(@league) do |f| %>
  <%= f.input :image,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'ligue-wrapper',
              item_wrapper_class: 'ligue-item category-ligue',
              input_html: { class: 'ligue-selector' },
              collection: [
                [image_tag(League::CATEGORIES.first, alt: ""), League::CATEGORIES.first],
                [image_tag(League::CATEGORIES.second, alt: ""), League::CATEGORIES.second],
                [image_tag(League::CATEGORIES.third, alt: ""), League::CATEGORIES.third],
                [image_tag(League::CATEGORIES.fourth, alt: ""), League::CATEGORIES.fourth],
                [image_tag(League::CATEGORIES.fifth, alt: ""), League::CATEGORIES.fifth],
                [image_tag(League::CATEGORIES[5], alt: ""), League::CATEGORIES[5]]
              ]
  %>

  <div class="text-center mb-4 mt-4">
    <h1 style="color: #253343; font-size: 26px; font-family: Cherry Bomb; margin-bottom: 20px;"><strong>Nom de la ligue</strong></h1>
  </div>
  <div class="text-center">
    <%= f.input :name, input_html: { class: 'name-field centered-input' }, label:false %>
    <%= f.button :submit, "Création", class: "btn-ace mt-4" %>
  </div>
<% end %>





