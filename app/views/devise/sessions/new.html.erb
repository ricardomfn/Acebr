<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="container">
    <h1 class="title mb-4 text-center">Connectez-vous</h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "create-input transparent-input" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "create-input transparent-input" },
                    label: "Mot de passe" %>
        <%= f.input :remember_me, as: :boolean,
                    label: "Se souvenir" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Connexion", class: "btn-ace mt-3 mb-3 w-100" %>
        <%= link_to "Inscription", new_registration_path(resource_name), class: "btn-ace btn mb-3 w-100" %>
        <%= link_to "Mot de passe oubliÃ©", new_password_path(resource_name), class: "btn-ace btn w-100" %>
      </div>
    <% end %>
  </div>
</div>
