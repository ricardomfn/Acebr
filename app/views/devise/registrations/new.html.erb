<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email" } %>

    <%= f.input :nickname,
      required: true,
      input_html: { autocomplete: "nickname" },
      label: "Nom d'utilisateur" %>

    <%= f.input :first_name,
      required: true,
      input_html: { autocomplete: "first_name" },
      label: "Prénom" %>

    <%= f.input :last_name,
      required: true,
      input_html: { autocomplete: "last_name" },
      label: "Nom de famille" %>

    <%= f.input :birth_date,
        as: :string,
        input_html: { data: { controller: "datepicker" } },
        label: "Date de naissance" %>

    <%= f.input :password,
      required: true,
      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
      input_html: { autocomplete: "new-password" },
      label: "Mot de passe" %>

    <%= f.input :password_confirmation,
      required: true,
      input_html: { autocomplete: "new-password" },
      label: "Confirmer mot de passe" %>

    <%= f.input :points,
      required: true,
      collection: [['Jamais joué', 0],['Débutant', 200],['Intermediaire', 400],['Confirmé', 600],['Expert', 800],['Elite',1000]],
      input_html: { autocomplete: "points" },
      label: "Comment jugez-vous votre niveau?" %>

    <%= f.input :photo, as: :file %>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>

<%= render "devise/shared/links" %>

  </div>

<% end %>
