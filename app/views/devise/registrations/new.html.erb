<h2 class="title mb-4 text-center">Cadastre-se</h2>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "your-form-class" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email", class: "create-input transparent-input"} %>

      <%= f.input :nickname,
        required: true,
        input_html: { autocomplete: "nickname", class: "create-input transparent-input" },
        label: "UsuÃ¡rio" %>

      <%= f.input :first_name,
        required: true,
        input_html: { autocomplete: "first_name", class: "create-input transparent-input" },
        label: "Nome" %>

      <%= f.input :last_name,
        required: true,
        input_html: { autocomplete: "last_name", class: "create-input transparent-input" },
        label: "Sobrenome" %>

      <%= f.input :birth_date,
          as: :string,
          input_html: { data: { controller: "datepicker" }, class: "create-input transparent-input" },
          label: "Data de nascimento" %>

      <%= f.input :password,
        required: true,
        hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password", class: "create-input transparent-input" },
        label: "Senha" %>

      <%= f.input :password_confirmation,
        required: true,
        input_html: { autocomplete: "new-password", class: "create-input transparent-input" },
        label: "Confirmar senha" %>

      <%= f.input :points,
        required: true,
        collection: [['Iniciante - 500pts', 500],['5a classe - 900pts', 900],['4a classe - 1200pts', 1200],['3a classe - 1300pts', 1300],['2a classe - 1400pts', 1400],['1a classe - 1700pts', 1700]],
        input_html: { autocomplete: "points", class: "create-input transparent-input" },
        label: "Como vocÃª julga seu nÃ­vel de jogo?" %>

      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">
        <%= f.button :submit, "Cadastrar", class: "btn-ace mt-3 mb-3 w-100" %>
        <%= link_to "Se conectar", new_session_path(resource_name), class: "btn-ace btn w-100" %>
    </div>
  <% end %>
</div>
