<%= render 'shared/navbar_general' %>

<div class="container">
<h1 class="title mb-4">Nouveau Match</h1>

<%= simple_form_for(@match) do |f| %>

  <%= f.input :address,
    label:false,
    # input_html: { class: "create-input"},
    input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
    wrapper_html: {data: {controller: "address-autocomplete",
    address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>

  <%= f.input :date,
    as: :string,
    input_html: { data: { controller: "datepicker" }, class: "create-input" },
    label:false, placeholder: "Date/Heure"
  %>

  <%= f.input :match_type,
    collection: Match::TYPES,
    label:false, prompt: "Type de match",
    input_html: { class: "create-input"}
  %>
  <%= f.input :modality,
    collection: Match::MODALITIES,
    label:false, prompt: "simple/double",
    input_html: { class: "create-input "}
  %>

  <%= f.input :price,
    label:false, placeholder: "prix",
    input_html: { class: "create-input"}
  %>

  <%= f.input :level,
    collection: [['Jamais joué', 0],['Débutant', 200],['Intermediaire', 400],['Confirmé', 600],['Expert', 800],['Elite',1000]],
    label:false, prompt: "Niveau",
    input_html: { class: "create-input"}
  %>

  <%= f.submit "Créer un match", class: "btn-ace mb-5" %>
<% end %>
</div>

</div>
