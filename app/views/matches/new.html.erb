<%= render 'shared/navbar_general' %>

<div class="container">
<h1 class="title mb-4">Novo jogo</h1>

<%= simple_form_for(@match) do |f| %>

  <%= f.input :address,
    label:false,
    # input_html: { class: "create-input"},
    input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
    wrapper_html: {data: {controller: "address-autocomplete",
    address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>

  <%= f.input :date,
    as: :string,
    input_html: { data: { controller: "datepicker" }, class: "create-input" },
    label:false, placeholder: "Data/Hora"
  %>

  <%= f.input :match_type,
    collection: Match::TYPES,
    label:false, prompt: "Tipo de jogo",
    input_html: { class: "create-input"}
  %>
  <%= f.input :modality,
    collection: Match::MODALITIES,
    label:false, prompt: "Simples/Duplas",
    input_html: { class: "create-input "}
  %>

  <%= f.input :price,
    label:false, placeholder: "preÃ§o",
    input_html: { class: "create-input"}
  %>

  <%= f.input :level,
    collection: [['Iniciante - 500pts', 500],['5a classe - 900pts', 900],['4a classe - 1200pts', 1200],['3a classe - 1300pts', 1300],['2a classe - 1400pts', 1400],['1a classe - 1700pts', 1700]],
    label:false, prompt: "Nivel",
    input_html: { class: "create-input"}
  %>

  <%= f.submit "Criar jogo", class: "btn-ace mb-5" %>
<% end %>
</div>

</div>
