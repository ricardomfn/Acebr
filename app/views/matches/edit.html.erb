<%= render 'shared/navbar_general' %>

<div class="text-center mb-4 mt-4">
  <h1 style="color: #253343; font-size: 26px;"><strong>Indiquez le gagnant du d√©fi</strong></h1>
</div>

<%= simple_form_for(@match) do |f| %>
  <%= f.input :winner,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'category-wrapper',
              item_wrapper_class: 'category-item d-flex align-items-center justify-content-center',
              item_label_class: 'collection-name text-center',
              input_html: { class: 'category-selector' },
              collection: [@match.user.name, @request.user.name] ,
              label: "" %>

  <div class="text-center mb-4 mt-5">
    <h1 style="color: #253343; font-size: 26px;"><strong>Rentrez le score</strong></h1>
  </div>

  <div class="score-fields d-flex justify-content-center">
    <div class="score-field text-align">
      <%= f.input :winner_score,
                  as: :select,
                  collection: 1..8,
                  include_blank: false,
                  label: "Gagnant",
                  input_html: { class: 'score-selector' } %>
    </div>
    <div class="score-field text-align">
      <%= f.input :loser_score,
                  as: :select,
                  collection: 1..8,
                  include_blank: false,
                  label: "Perdant",
                  input_html: { class: 'score-selector' } %>
    </div>
  </div>



  <div class="d-flex justify-content-center">
    <%= f.submit "Valider", class: "btn-ace mt-4" %>
  </div>

<% end %>
