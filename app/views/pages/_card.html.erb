<% unless @matches.empty? %>
  <% @matches.each do |match| %>
    <div class="small-card mt-0 mb-2 shadow-card" id="card-hist">
      <div>
        <% winner_user = User.where(nickname: match.winner).first %>
        <%= cl_image_tag winner_user.photo.key, class: "avatar m-2" if loser %>
      </div>
      <div class="m-1 card-titre-gras">
        <%= link_to match.winner, user_profile_path(winner_user) %>
      </div>
      <div class="m-1">
        <%= match.winner_score %>
      </div>
      <div class="m-1">
        <%= "x" %>
      </div>
      <div class="m-1">
        <%= match.loser_score %>
      </div>
      <div class="card-titre-gras">
        <% loser_user = User.where(nickname: match.loser).first %>
        <%= link_to match.loser, user_profile_path(loser_user) %>
      </div>
      <div>
        <%= cl_image_tag loser_user.photo.key, class: "avatar m-2" if loser %>
      </div>
    </div>
  <% end %>
<% end %>
