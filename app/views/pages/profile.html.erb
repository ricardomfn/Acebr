          <% if @matches_user.last.winner.present? %>
            <% @matches_user.each do |match| %>
              <div class="small-card mt-0 mb-2" id="card-hist">
                <div>
                  <% if match.winner != match.user.nickname %>
                    <% loser_request = Request.where(match: match).first %>
