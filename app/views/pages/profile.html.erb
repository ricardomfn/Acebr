<div class="container">

<div class="profile">
  <%= cl_image_tag current_user.photo.key, class: "profile-avatar avatar-bordered"%>
  <p><%= current_user.nickname %></p>
  <p><%= current_user.points %></p>
</div>

<div class="card-product">
    <% @leagues.each do |league| %>
      <%= link_to league_path(league) do %>
            <div class="card">
              <h2 class="card-title"><%= league.name %></h2>
              <div class="card-text">
                <p>created by :<%= league.user.first_name %></p>
              </div>
            </div>
        <% end %>
      <% end %>
</div>

</div>
